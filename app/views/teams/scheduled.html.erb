<div id="elections">
<h2 id="month">
  <%= link_to "<", date: @date.prev_month %>
  <%= @date.strftime("%B %Y") %>   
  <%= link_to ">", date: @date.next_month %>
</h2>
  <%= calendar @date do |date| %>
    <%= date.day %>
    <% if @elections_by_date[date] %>
    <ul>
      <% @elections_by_date[date].each do |election| %>
        <li><%= link_to election.unit, election %></li>
      <% end %>
    </ul>
    <% end %>
  <% end %>
</div>