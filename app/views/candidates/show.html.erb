<%- model_class = Candidate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>
<div class="row">
<div class="span8 offset2">
<table class="table table-bordered table-striped">
  <tr><td><strong>Name:</strong></td>
  <td><%= @candidate.display_name %></td></tr>
  <tr><td><strong><%= model_class.human_attribute_name(:rank) %>:</strong></td><td><%= @candidate.rank %></td></tr>
  <tr><td><strong><%= model_class.human_attribute_name(:phone_home) %>:</strong></td><td><%= @candidate.phone_home %></td></tr>
  <tr><td><strong><%= model_class.human_attribute_name(:phone_mobile) %>:</strong></td><td><%= @candidate.phone_mobile %></td></tr>
  <tr><td><strong><%= model_class.human_attribute_name(:dob) %>:</strong></td><td><%= @candidate.dob %></td></tr>
  <tr><td><strong><%= model_class.human_attribute_name(:bsa_id) %>:</strong></td><td><%= @candidate.bsa_id %></td></tr>
  <tr><td><strong><%= model_class.human_attribute_name(:email_scout) %>:</strong></td><td><%= @candidate.email_scout %></td></tr>
  <tr><td><strong><%= model_class.human_attribute_name(:email_parent) %>:</strong></td><td><%= @candidate.email_parent %></td></tr>
  <tr><td><strong><%= model_class.human_attribute_name(:elected) %>:</strong></td><td><%= @candidate.elected %></td></tr>
  <tr><td><strong><%= model_class.human_attribute_name(:ordeal_date) %>:</strong></td><td><%= @candidate.ordeal_date %></td></tr>


</table>

<table class="table table-bordered table-striped">
<tr><td>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              election_candidates_path(@election), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_election_candidate_path(@election, @candidate), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              election_candidate_path(@election, @candidate),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</td></tr></table>


</div></div>
